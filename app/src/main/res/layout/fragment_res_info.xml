<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".navTab.navTabFragment.ResInfoFragment"
    android:layout_gravity="bottom"
    >

    <LinearLayout
        android:id="@+id/toResDtl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/resInfoThumbnail"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/logo_b"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/resInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="맛집이름"
                    />

                <TextView
                    android:id="@+id/resInfoAvgScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="평점"
                    android:layout_marginRight="20sp"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/resInfoMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴"
                android:textSize="12dp"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:id="@+id/resInfoOT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영업시간"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/resInfoIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게소개"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>