<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/nexonmed"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexonbold"
            android:text="MatZip Mobile"
            android:textColor="@color/design_default_color_primary"
            android:textSize="35sp"
            android:layout_marginBottom="20dp"

            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/logo_b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/joinBtn"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginBottom="10dp"
            />


        <Button
            android:id="@+id/joinBtn"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:fontFamily="@font/nexonlight"
            android:text="Join"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:fontFamily="@font/nexonlight"
            android:text="Login"
            android:textSize="20sp"
            ></Button>


    </LinearLayout>

