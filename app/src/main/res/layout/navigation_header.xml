<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/design_default_color_primary">

    <ImageView
        android:id="@+id/naviImg"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexonmed"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="000 님"
        app:layout_constraintTop_toBottomOf="@+id/naviImg"
        app:layout_constraintBottom_toTopOf="@+id/naviHeaderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

    <TextView
        android:id="@+id/naviHeaderText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexonmed"
        android:text="맛집 모바일에 오신것을 환영합니다!"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userIdTextView"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>