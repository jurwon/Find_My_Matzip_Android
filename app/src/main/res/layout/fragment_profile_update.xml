<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navTab.navTabFragment.ProfileUpdateFragment"
    android:onClick="hideKeyboard">

    <!-- hideKeyboard : text작성중 다른곳 누르면 키보드 내리기-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/userUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nexonbold"
                android:paddingBottom="20dp"
                android:text="Edit Profile"
                android:textColor="#FFC107"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="20dp">

                <ImageView
                    android:id="@+id/myProfileImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/profile"></ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/galleryBtn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:text="갤러리"></Button>

                <Button
                    android:id="@+id/cameraBtn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:text="카메라"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="15sp"
                    android:width="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/userId"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/nexonlight"
                    android:inputType="textPersonName"
                    android:paddingLeft="30dp"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PW"
                    android:width="50dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/userPwd"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius_edittext_red"
                    android:fontFamily="@font/nexonlight"
                    android:paddingLeft="30dp"
                    android:textColor="#B3B3B3"
                    android:hint="비밀번호 입력"
                    android:textSize="15sp"
                    android:ems="10"
                    android:inputType="textPassword"></EditText>

                <Button
                    android:id="@+id/pwCheckBtn"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:text="확인"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/design_default_color_primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:width="50dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius"
                    android:fontFamily="@font/nexonlight"
                    android:paddingLeft="30dp"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp"
                    android:ems="10"
                    android:inputType="textPersonName"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHONE"
                    android:width="50dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/userPhone"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius"
                    android:fontFamily="@font/nexonlight"
                    android:paddingLeft="30dp"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp"
                    android:ems="10"
                    android:inputType="textPhonetic"
                    ></EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:width="50dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/userAddress"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius"
                    android:fontFamily="@font/nexonlight"
                    android:paddingLeft="30dp"
                    android:hint="주소 검색"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp"
                    android:ems="10"
                    android:focusable="false"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:width="50dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <EditText
                    android:id="@+id/userAddress_Detail"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radius"
                    android:ems="10"
                    android:fontFamily="@font/nexonlight"
                    android:hint="상세 주소"
                    android:paddingLeft="30dp"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp"
                    android:visibility="gone"></EditText>
            </LinearLayout>

            <LinearLayout

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:id="@+id/testRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="남성"></RadioButton>

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="여성">

                    </RadioButton>
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/updateBtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/nexonmed"
                    android:text="수정"></Button>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/nexonmed"
                    android:text="취소"></Button>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>